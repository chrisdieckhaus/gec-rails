    <div class="small-12 column">
        <div class="article-title">
            <p class="article-title"><em><%= link_to article[:title], article[:src]%></em>
              <br>
            <%= article[:site] %></p>
        </div>
        <div class="article-blurb">
            <p class="article-blurb">
              <%= article[:blurb] %>
            </p>
        </div>
    </div>
</div>
<% end %>


